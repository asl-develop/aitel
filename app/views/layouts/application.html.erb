    <meta name="author" content="">

    <!-- Le styles -->
    <style type="text/css">
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
    </style>

    <%= stylesheet_link_tag    "application", :media => "all" %>
    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
