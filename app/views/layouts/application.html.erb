    <div class="container">

<% if flash.notice %>
<div class="alert">
  <strong><%= flash.notice %></strong>
</div>
<% end %>
      <!-- Main hero unit for a primary marketing message or call to action -->
      <%= yield %>

      <hr>

      <footer>
        <p>&copy; Company 2013</p>
